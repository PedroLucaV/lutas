generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Competidor {
  id             Int      @id @default(autoincrement())
  nome           String
  telefone       String
  email          String
  endereco       String
  cidade         String
  estado         String
  data_nascimento DateTime
  idade          Int
  genero         String
  graduacao      String
  peso           Float
  equipe         String
  professor      String
  responsavel    String?
  cpf            String?
  fotoResp       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Espectador {
  id             String   @id @default(uuid())
  nome           String
  telefone       String
  email          String
  endereco       String
  cidade         String
  estado         String
}